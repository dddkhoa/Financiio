<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_arrow_back_24" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update Transaction"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_edit_24"
            android:layout_marginStart="10dp"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/delete"
            android:layout_marginStart="5dp"/>

    </LinearLayout>

    <EditText
        android:id="@+id/moneyInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="75dp"
        android:layout_marginTop="150dp"
        android:ems="10"
        android:hint="0 VND"
        android:inputType="number"
        android:textSize="30sp"
        android:layout_alignParentTop="true"/>


    <TextView
        android:id="@+id/categoryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="9"
        android:hint="Select category"
        android:textSize="30sp"
        android:layout_below="@id/moneyInput"
        android:layout_toRightOf="@id/categoryImage"
        android:layout_marginStart="20dp"
        />


    <ImageView
        android:id="@+id/categoryImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_baseline_category_24"
        android:layout_below="@id/moneyInput"/>

    <EditText
        android:id="@+id/noteText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Write note"
        android:inputType="text"
        android:textSize="30sp"
        android:layout_below="@id/categoryName"
        android:layout_toRightOf="@id/noteImage"
        />

    <ImageView
        android:id="@+id/noteImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic_baseline_notes_24"
        android:layout_below="@id/categoryName"
        />

    <ImageView
        android:id="@+id/dateImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_baseline_calendar_today_24"
        android:layout_below="@id/noteImage"/>

    <TextView
        android:id="@+id/datePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="9"
        android:hint="Select date"
        android:textSize="30sp"
        android:layout_toRightOf="@id/dateImage"
        android:layout_below="@id/noteText"
        android:layout_marginStart="20dp"/>



</RelativeLayout>